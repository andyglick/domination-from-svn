<?xml version="1.0" encoding="UTF-8"?>
<synth>

    <style id="backingStyle">
	   <state>
	       <font name="Dialog" size="14"/>
	       <color value="#D8D987" type="BACKGROUND"/>
	       <color value="#FF0000" type="FOREGROUND"/>
	   </state>
    </style>
    <bind style="backingStyle" type="region" key=".*"/>



    <style id="contentPane">
	   <insets top="6" left="6" bottom="6" right="6"/>
	   <opaque value="false"/>
	   <state>
	      <imagePainter path="/patternRed.png" sourceInsets="43 43 43 43" paintCenter="true"/>
	   </state>
    </style>
    <bind style="contentPane" type="region" key="Frame"/>


    <style id="view">
	   <insets top="15" left="15" bottom="15" right="15"/>
	   <opaque value="false"/>
	   <state>
	      <imagePainter path="/shadow.png" sourceInsets="25 25 25 25" paintCenter="false"/>
	   </state>
    </style>
    <bind style="view" type="region" key="PicturePanel"/>


    <style id="panel">
        <opaque value="false"/>
    </style>
    <bind style="panel" type="region" key="Panel"/>
    <bind style="panel" type="region" key="ScrollPane"/>
    <bind style="panel" type="region" key="Label"/>
    <bind style="panel" type="region" key="PicturePanel"/>



    <style id="scrollpane">
      <imageIcon id="thumb_top" path="/thumb.png" x="0" y="0" width="5" height="2"/>
      <imageIcon id="thumb_fill" path="/thumb.png" x="0" y="2" width="5" height="24"/>
      <imageIcon id="thumb_bottom" path="/thumb.png" x="0" y="26" width="5" height="2"/>
      <imageIcon id="track_top" path="/track.png" x="0" y="0" width="9" height="2"/>
      <imageIcon id="track_fill" path="/track.png" x="0" y="2" width="9" height="24"/>
      <imageIcon id="track_bottom" path="/track.png" x="0" y="26" width="9" height="2"/>
      <state>
        <property key="thumbTop" value="thumb_top"/>
        <property key="thumbBottom" value="thumb_bottom"/>
        <property key="thumbFill" value="thumb_fill"/>
        <property key="trackTop" value="track_top"/>
        <property key="trackBottom" value="track_bottom"/>
        <property key="trackFill" value="track_fill"/>
      </state>
    </style>
    <bind style="scrollpane" type="region" key="ScrollPane"/>


    <style id="textfield">
	<insets top="4" left="6" bottom="4" right="6"/>
	<state>
	    <font name="Verdana" size="14"/>
	    <color value="#D2DFF2" type="BACKGROUND"/>       
	    <color value="#000000" type="FOREGROUND"/>
	<imagePainter path="/textfield.png" sourceInsets="4 6 4 6" paintCenter="false"/>
	</state>
    </style>
    <bind style="textfield" type="region" key="TextField"/>


    <style id="button">
	<insets top="5" left="10" bottom="5" right="10"/>
	<opaque value="false"/>
	<state>
	<property key="Button.textShiftOffset" type="integer" value="1"/>
	    <imagePainter method="buttonBackground" path="/button.png" sourceInsets="12 15 12 15" />
	    <color type="BORDERFILL" value="#296ED3"/>
	    <font name="Dialog" size="16"/>
	    <color type="FOREGROUND" value="#FFFFFF"/>
	</state>
	<state value="FOCUSED">
	    <imagePainter path="/button_over.png" sourceInsets="12 15 12 15" />
	    <color type="BORDERFILL" value="#F37529"/>
	</state>
	<!-- not supported yet
        <state value="PRESSED"> 
	    <imagePainter path="/button_press.png" sourceInsets="12 15 12 15" />
	</state>
        -->
    </style>
    <bind style="button" type="region" key="Button"/>


    <style id="checkbox">
	<imageIcon id="check_off" path="/checkbox_off.png"/>
	<imageIcon id="check_on" path="/checkbox_on.png"/>
	<state>
	    <property key="icon" value="check_off"/>
	</state>
	<state value="SELECTED">
	    <property key="icon" value="check_on"/>
	</state>
    </style>
    <bind style="checkbox" type="region" key="CheckBox"/>


    <style id="frameTitlePane">
      <state>
	<property key="titleAlignment" type="string" value="center"/>
      </state>
    </style>
    <bind style="frameTitlePane" type="region" key="TitleBar"/>

</synth>
