<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.yura.domination"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:name="net.yura.android.AndroidMeApp" android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/android:Theme.Light.NoTitleBar" android:debuggable="true">
        <activity android:name="net.yura.android.AndroidMeActivity"
            	  android:launchMode="singleTask"
                  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustResize|stateHidden"
                  android:configChanges="locale|orientation|keyboard|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- this means i dont need different assets for different resolutions -->
    <supports-screens android:anyDensity="false"/>
    <!-- THIS DOES NOT WORK IF hardwareAccelerated=true!!!! -->

</manifest>